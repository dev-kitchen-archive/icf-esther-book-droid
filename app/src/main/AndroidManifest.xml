<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kitchen.dev.icfbooks">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="kitchen.dev.icfbooks.IntroSlidesActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="kitchen.dev.icfbooks.ItemListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kitchen.dev.icfbooks.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="kitchen.dev.icfbooks.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kitchen.dev.icf.books.ItemListActivity" />
        </activity>
        <activity android:name="kitchen.dev.icfbooks.BarcodeScannerActivity"></activity>




    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
</manifest>
